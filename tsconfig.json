{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/types",
    "declaration": true,
    "sourceMap": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "types": ["vite/client"],
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
